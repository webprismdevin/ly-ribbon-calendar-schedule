{
  "name": "mm-sqsp-vod",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browser": {
    "vanillaCalendar": ".src/vendor/vanilla-calendar.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "watchify ./src/index.js -o bundle.js -v -s bundle",
    "build": "browserify ./src/index.js | uglifyjs > ./disti/main.js",
    "postbuild": "run-s css:*",
    "css:compile": "cat ./src/css/* > ./src/style_bundle.css",
    "css:purge": "purgecss --css ./src/style_bundle.css --content ./src/index.js ./src/vendor/vanilla-calendar.js ./src/components/*.js --safelist w-1\/2 --output ./src/styles-purged.css",
    "css:minify": "minify ./src/styles-purged.css > ./disti/styles-min.css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tvanc/lineclamp": "^0.1.25",
    "dayjs": "^1.10.6",
    "line-clamp": "^1.0.0",
    "list.js": "^2.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "browserify": "^17.0.0",
    "browserify-shim": "^3.8.14",
    "minify": "^7.0.2",
    "postcss": "^8.3.5",
    "purgecss": "^4.0.3",
    "tailwindcss": "^2.2.4"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "vanillaCalendar": "global:VanillaCalendar"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
